<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" 
>

<mapper namespace="com.liuning.mapper.OrdersMapper">

	<insert id="insertOrders" parameterType="com.liuning.pojo.Orders">
		<selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO 
			orders(total,ordertime,state,name,phone,addr) 
		VALUES
			(#{total},#{ordertime},#{state},#{name},#{phone},#{addr})
	</insert>

</mapper>